<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.chat.base.views.ShadowLayout
        android:id="@+id/msgReactionsLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:hl_bottomShow="true"
        app:hl_cornerRadius="30dp"
        app:hl_leftShow="true"
        app:hl_rightShow="true"
        app:hl_shadowBackColor="@color/screen_bg"
        app:hl_shadowColor="@color/color999"
        app:hl_shadowLimit="2dp"
        app:hl_topShow="true">

        <FrameLayout
            android:id="@+id/msgReactionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="3dp"
            android:paddingTop="1dp"
            android:paddingEnd="3dp"
            android:paddingBottom="1dp" />
    </com.chat.base.views.ShadowLayout>

</LinearLayout>